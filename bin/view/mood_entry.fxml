<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="formContainer" spacing="15.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MoodEntryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Mood Tracker" styleClass="label-title" />

    <VBox spacing="10.0" styleClass="card">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Label styleClass="label-subtitle" text="Bagaimana suasana hati kamu saat ini?">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            
            <GridPane fx:id="emojiGrid" hgap="15.0" vgap="10.0">
                </GridPane>

            <Label styleClass="label-subtitle" text="Catatan Tambahan:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>
            <TextArea fx:id="noteArea" prefHeight="80.0" promptText="Tuliskan apa yang kamu rasakan..." />

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <children>
                    <Label text="Bagikan entri ini?">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <RadioButton fx:id="shareYes" text="Yes">
                        <toggleGroup>
                            <ToggleGroup fx:id="shareToggleGroup" />
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="shareNo" selected="true" text="No" toggleGroup="$shareToggleGroup" />
                </children>
                <padding>
                    <Insets top="10.0" />
                </padding>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Button onAction="#handleSave" styleClass="button" text="Simpan" />
                    <Button onAction="#handleEdit" styleClass="button" text="Edit" />
                    <Button onAction="#handleDelete" styleClass="button" text="Hapus" />
                    <Button onAction="#handleReset" styleClass="button" text="Reset" />
                </children>
                <padding>
                    <Insets top="15.0" />
                </padding>
            </HBox>
        </children>
    </VBox>

    <VBox VBox.vgrow="ALWAYS">
        <children>
            <Label text="Mood History" styleClass="label-subtitle">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </Label>
            <TableView fx:id="moodTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateColumn" prefWidth="200.0" text="Date" />
                    <TableColumn fx:id="moodColumn" prefWidth="120.0" text="Mood" />
                    <TableColumn fx:id="noteColumn" prefWidth="400.0" text="Note" />
                    <TableColumn fx:id="sharedColumn" prefWidth="100.0" text="Shared" />
                </columns>
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </children>
    </VBox>
</VBox>